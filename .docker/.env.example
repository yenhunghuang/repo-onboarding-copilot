# Docker Compose Environment Variables
# Copy this file to .env and modify values as needed

# Application Settings
ENV=production
LOG_LEVEL=info
ANALYSIS_CACHE_DIR=/tmp/analysis

# Database Settings (for future use)
POSTGRES_DB=repo_copilot
POSTGRES_USER=copilot
POSTGRES_PASSWORD=secure_password_change_in_production

# Redis Settings (for future use)
REDIS_PASSWORD=redis_password_change_in_production

# Monitoring Settings (for future use)
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin_password_change_in_production

# Security Settings
CONTAINER_SECURITY_ENABLED=true
SECCOMP_PROFILE=../configs/security/seccomp-analysis.json

# Performance Settings
MAX_ANALYSIS_WORKERS=4
ANALYSIS_TIMEOUT=300s
MEMORY_LIMIT=2g

# Docker Registry (for production deployment)
DOCKER_REGISTRY=ghcr.io
IMAGE_TAG=latest
DOCKER_REPOSITORY=yenhunghuang/repo-onboarding-copilot